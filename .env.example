# Taboo Environment Variable Overrides
# These override values from config.yaml (useful for Docker/k8s deployments).
# Copy to .env and adjust as needed.

# Environment: "development" or "production"
# TABOO_ENVIRONMENT=production

# Server
# TABOO_SERVER_HOST=0.0.0.0
# TABOO_SERVER_PORT=8080
# TABOO_SERVER_READ_TIMEOUT=30s
# TABOO_SERVER_WRITE_TIMEOUT=30s
# TABOO_SERVER_SHUTDOWN_TIMEOUT=10s
# TABOO_SERVER_REQUEST_TIMEOUT=30s
# TABOO_SERVER_CORS_ORIGINS=https://example.com,https://app.example.com
# TABOO_SERVER_RATE_LIMIT=100
# TABOO_SERVER_RATE_BURST=20

# Game Engine
# TABOO_GAME_DRAW_DURATION=90s
# TABOO_GAME_WAIT_DURATION=90s
# TABOO_GAME_PICK_COUNT=20
# TABOO_GAME_MAX_NUMBER=80

# Database
# TABOO_DATABASE_DRIVER=sqlite
TABOO_DATABASE_DSN=/data/taboo.db

# Logging
# TABOO_LOGGING_LEVEL=info
# TABOO_LOGGING_FORMAT=json

# Discord Integration (optional)
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
